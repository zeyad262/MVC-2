@model Department
@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">@Model.Name Department Details</h1>

<div class="form-group mb-3">
    <label>Code</label>
    <input readonly class="form-control" asp-for="Code" />
</div>
<div class="form-group  mb-3">
    <label>Name</label>
    <input readonly class="form-control" asp-for="Name" />
</div>
<div class="form-group  mb-3">
    <label>Date Of Creation</label>
    <input readonly class="form-control" asp-for="MyProperty" />
</div>

<div class="mt-3">
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>