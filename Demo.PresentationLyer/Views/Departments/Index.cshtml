@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
<a class="btn btn-primary my-3" asp-action="Create">Create Department</a>
@if (Model.Any())
{
    <h1>
        All Departments
    </h1>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.MyProperty)</td>

                <td>Deatails</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.MyProperty</td>

                    <td><a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye me-2"></i>Detalis</a></td>
                    <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit me-2"></i>Edit</a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash me-2"></i>Delete</a></td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
       <h1 class="text-center alert-danger">There Is No Departments</h1>
    </div>
}